{{- if and (not .Site.Params.disableSearchIndex) (not .Site.Params.disableSearchPage) }}
	{{- .EnableAllLanguages }}
	{{- $url := trim (or .Site.Params.searchPageURL "search") "/"  }}
	{{- $content := dict
		"mediaType" "text/markdown"
		"value" "{{% _relearn_searchform %}}"
	}}
	{{- $page := dict
		"content" $content
		"kind" "page"
		"path" "_relearn_searchpage"
		"title" (T "Search")
		"url" $url
	}}
	{{- .AddPage $page }}
{{- end }}